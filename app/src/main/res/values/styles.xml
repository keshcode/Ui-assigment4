<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Cutome Textview style for Bottom Bar-->
    <style name="Bottombartv">
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_xsmall</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--Custome Toolbar Image View Layout-->
    <style name="Toolbariv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IvTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DrawerTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:layout_marginStart">@dimen/spacing_tiny</item>

    </style>

    <style name="DrawerllStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
    </style>

    <style name="CustomRatingBar">
        <item name="android:colorControlActivated">#f6a623</item>
        <item name="android:colorControlNormal">#b7b7b7</item>
    </style>
</resources>
